@model TestWEbApi2.CustomerDto.CreateCustomerRequestModel
<form asp-action = "CreateCustomer" >
    <div>
        <div>
            <label>Name</label>
        <input type="text" name = "CustomerName" required/>
        </div>
        <div>
            <label>PhoneNumber</label>
        <input type="text" name = "PhoneNumber" required/>
        </div>
        <div>
            <label >Password</label>
        <input type="text" name = "Password" required/>
        </div>
                    
        <div>
            <input type="submit" asp-action="CreateCustomer" asp-controller="Customer" class = "btn btn-success" required/>
        </div>
    </div>
</form>